<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1C1C">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_margin="10dp"
                    android:id="@+id/arrow_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/arrow_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="monospace"
                    android:id="@+id/txtProfile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_bg"
                    android:layout_toRightOf="@+id/txtProfile"
                    android:layout_marginLeft="40dp"
                    android:padding="5dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_announcement_24"
                        android:layout_margin="10dp"
                        android:id="@+id/img_message"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="support"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:fontFamily="monospace"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/txtSupport"/>



                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/person"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/profile_image"
                    android:padding="5dp"
                    android:id="@+id/llayoutProfileName">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vijay Thalapathy"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:id="@+id/txtProfileName"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="member since Dec, 2020"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:fontFamily="monospace"
                        android:layout_marginTop="5dp"/>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/llayoutProfileName"
                    android:background="@drawable/circular_bg"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_brush_24"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        />



                </LinearLayout>





            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_bg"
                android:padding="10dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/vehicle_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_car_repair_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="get to know your vehicle"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtVehicle"
                    android:layout_toRightOf="@id/vehicle_image"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRED Garage"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/vehicle_image"
                    android:layout_below="@id/txtVehicle"
                    android:layout_margin="5dp"
                    android:id="@+id/txtCred"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:id="@+id/img_right_arrow"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/txtCred"
                    android:layout_below="@id/txtVehicle"
                    />





            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/credit_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_credit_score_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="credit score"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtCreditScore"
                    android:layout_toRightOf="@id/credit_image"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=". REFRESH AVAILABLE"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtRefresh"
                    android:layout_toRightOf="@id/txtCreditScore"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="757"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtCreditAmout"
                    android:layout_toRightOf="@id/txtRefresh"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:layout_toRightOf="@id/txtCreditAmout"
                    android:layout_marginLeft="5dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/line_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rupee_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_currency_rupee_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lifetime cashback"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtCashback"
                    android:layout_toRightOf="@id/rupee_image"
                    android:layout_margin="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹3"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtCashbackAmout"
                    android:layout_toLeftOf="@id/img_cashback_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_cashback_arrow"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/line_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/balance_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_account_balance_wallet_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bank balance"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtBankBalance"
                    android:layout_toRightOf="@id/balance_image"
                    android:layout_margin="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="check"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:id="@+id/txtCheck"
                    android:layout_toLeftOf="@id/img_bank_balance_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_bank_balance_arrow"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/line_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR REWARDS &amp; BENIFITS"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:id="@+id/txtReward"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/txtReward"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cashback balance"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtCashbackBalance"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0"
                            android:textColor="#625F5F"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtCashbackBalanceAmount"
                            android:layout_below="@id/txtCashbackBalance"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/line_bg"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="coins"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtCoins"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26,46,583"
                            android:textColor="#625F5F"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtCoinAmount"
                            android:layout_below="@id/txtCoins"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/line_bg"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="win upto Rs 1000"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtWin"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="refer and earn"
                            android:textColor="#625F5F"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtRefer"
                            android:layout_below="@id/txtWin"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRANSACTIONS &amp; SUPPORT"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:id="@+id/txtTransaction"
                        android:layout_marginTop="30dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="all transactions"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:id="@+id/txtAllTransactions"

                            />




                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baseline_arrow_forward_ios_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>







                </LinearLayout>









            </RelativeLayout>





        </LinearLayout>





    </ScrollView>






</LinearLayout>